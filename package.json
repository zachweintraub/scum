{
  "name": "scum",
  "version": "1.0.0",
  "description": "Online multiplayer version of the card game.",
  "main": "index.ts",
  "scripts": {
    "build": "npm-run-all -p -l build:*",
    "start": "node dist-server/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm-run-all -p -l watch:*",
    "clean": "rimraf ./public",
    "watch": "npm-run-all -p -l watch:*",
    "watch:server": "ts-node-dev server/index.ts",
    "watch:client": "parcel watch ./client/index.tsx -d ./public -o app.js",
    "build:client": "npm run clean && parcel build ./client/index.tsx -d ./public -o app.js",
    "build:server": "tsc -p ./server/tsconfig.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.3.6",
    "@helpfulhuman/tslint-rules": "^1.0.0",
    "apollo-server-express": "^2.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "graphql-iso-date": "^3.6.1",
    "mongodb": "^3.6.2",
    "parcel-bundler": "^1.12.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-r": "^2.0.0-rc02",
    "react-router-dom": "^5.2.0",
    "tslint": "^6.1.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/mongodb": "^3.5.27",
    "@types/node": "^14.11.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.6",
    "browser-sync": "^2.26.13",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.30.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.0.3"
  }
}
